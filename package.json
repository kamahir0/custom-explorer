{
  "name": "custom-explorer",
  "displayName": "Custom Explorer",
  "publisher": "donuts-hiratsuka",
  "description": "",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.100.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamahir0/custom-explorer"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Custom Explorer",
      "properties": {
        "customExplorer.excludeExtensions": {
          "type": "array",
          "default": [
            ".prefab",
            ".unity",
            ".preset",
            ".asmdef",
            ".asset",
            ".mat",
            ".meta",
            ".DS_Store",
            ".git",
            ".gitignore"
          ],
          "description": "カスタムエクスプローラーに追加しないファイル拡張子やファイル名を設定します（例: .meta, .git）"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "custom-explorer-container",
          "title": "Custom Explorer",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "custom-explorer-container": [
        {
          "id": "custom-explorer-view",
          "name": "Custom Explorer",
          "icon": "$(heart)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "custom-explorer-view",
        "contents": "まだ項目がありません。\n[項目を追加...](command:customExplorer.importFromWorkspace)",
        "when": "customExplorer.isEmpty"
      }
    ],
    "commands": [
      {
        "command": "customExplorer.addGroup",
        "title": "新しいフォルダー...",
        "icon": "$(new-folder)"
      },
      {
        "command": "customExplorer.importFromWorkspace",
        "title": "項目を追加...",
        "icon": "$(add)"
      },
      {
        "command": "customExplorer.removeEntry",
        "title": "削除",
        "icon": "$(trash)"
      },
      {
        "command": "customExplorer.renameEntry",
        "title": "名前の変更...",
        "icon": "$(edit)"
      },
      {
        "command": "customExplorer.collapseRecursive",
        "title": "再帰的に折りたたむ",
        "icon": "$(collapse-all)"
      },
      {
        "command": "customExplorer.expandRecursive",
        "title": "再帰的に展開",
        "icon": "$(expand-all)"
      },
      {
        "command": "customExplorer.collapseAll",
        "title": "すべて折りたたむ",
        "icon": "$(collapse-all)"
      },
      {
        "command": "customExplorer.expandAll",
        "title": "すべて展開",
        "icon": "$(expand-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "customExplorer.importFromWorkspace",
          "when": "view == custom-explorer-view",
          "group": "navigation@1"
        },
        {
          "command": "customExplorer.expandAll",
          "when": "view == custom-explorer-view",
          "group": "navigation@2"
        },
        {
          "command": "customExplorer.collapseAll",
          "when": "view == custom-explorer-view",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "customExplorer.addGroup",
          "when": "view == custom-explorer-view && viewItem == group",
          "group": "inline@1"
        },
        {
          "command": "customExplorer.expandRecursive",
          "when": "view == custom-explorer-view && viewItem == group",
          "group": "inline@2"
        },
        {
          "command": "customExplorer.collapseRecursive",
          "when": "view == custom-explorer-view && viewItem == group",
          "group": "inline@3"
        },
        {
          "command": "customExplorer.removeEntry",
          "when": "view == custom-explorer-view",
          "group": "inline@4"
        },
        {
          "command": "customExplorer.addGroup",
          "when": "view == custom-explorer-view && viewItem == group",
          "group": "1_modification@1"
        },
        {
          "command": "customExplorer.renameEntry",
          "when": "view == custom-explorer-view && viewItem == group",
          "group": "1_modification@2"
        },
        {
          "command": "customExplorer.removeEntry",
          "when": "view == custom-explorer-view",
          "group": "2_destructive@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}